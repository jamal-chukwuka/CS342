<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ServerController" spacing="20" alignment="CENTER">
    <Label text="Poker Server" style="-fx-font-size: 24px; -fx-text-fill: white;"/>
    <Label text="Enter Port Number:"/>
    <TextField fx:id="portField" promptText="3000"/>
    <Button fx:id="startServerButton" text="Start Server" onAction="#handleStartServer"/>
    <Label fx:id="serverStatusLabel" text="" style="-fx-text-fill: red;"/>
</VBox>
